@model ComputingManagementSystem.Models.Software

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Software</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SoftwareName" class="control-label"></label>
                <input asp-for="SoftwareName" class="form-control" />
                <span asp-validation-for="SoftwareName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VersionNum" class="control-label"></label>
                <input asp-for="VersionNum" class="form-control" />
                <span asp-validation-for="VersionNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LinkToSoftware" class="control-label"></label>
                <input asp-for="LinkToSoftware" class="form-control" />
                <span asp-validation-for="LinkToSoftware" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.AntiForgeryToken();
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
